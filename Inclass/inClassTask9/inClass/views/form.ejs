<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/nav'); -%>
  <section class="w50">
    <form name="myform" method="Post" onsubmit="return formSubmit();"  action="" >

      <label>Student ID</label>
      <input id="studentId" placeholder="eg : 8692765" type="text" name="studentId"><br/>

      <label>Student Name</label>
      <input id="name" placeholder="First Last" type="text" name="name"><br/>

      <label>Email</label>
      <input id="email" placeholder="email@domain.com" type="text" name="email"><br/>

      <label>Course</label>
      <select name="course" id="course">
          <option value="">----- Select -----</option>
          <option value="PROG1800">PROG1800</option>
          <option value="PROG1800">PROG1815</option>
          <option value="PROG1800">PROG1825</option>
      </select><br/>

      <br/><br/>

      <input type="submit" value="Regist">
      <p id="errors"></p>
    </form>  
</section>
<section class="w50">
  <div class="formData">
    <%
      if(typeof(errors) != 'undefined'){
        for(var error of errors){
        %>
          <p class="errors"><%= error.msg %></p>
        <%
        }
      }
    %>
    <%
      if(typeof(studentId) != 'undefined' && typeof(name) != 'undefined' && typeof(email) != 'undefined' && typeof(course) != 'undefined'){
        %>
        <p id="formResult">Student Information:</p>
        <table>
          <tr>
            <th>StudentId: </th>
            <td> <%= studentId %></td>
          </tr>
          <tr>
            <th>Name: </th>
            <td><%= name %></td>
          </tr>
          <tr>
            <th>Email: </th>
            <td><%= email %></td>
          </tr>
          <tr>
            <th>Course: </th>
            <td>$<%= course %></td>
          </tr>
        </table>
        <%
      }
    %>
    
  </div>
</section>
<div class="clear"></div>
</body>
<%- include('layouts/footer'); -%>








